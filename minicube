#!/bin/bash

# ----------------------------------------
# Complete Minikube Setup Script
# For Amazon Linux 2023
# Installs Docker, kubectl, Minikube
# Starts Minikube cluster
# ----------------------------------------

set -e

echo "ğŸš€ Updating system..."
sudo dnf update -y

echo "ğŸš€ Installing Docker..."
sudo dnf install -y docker
sudo systemctl enable --now docker

echo "ğŸš€ Adding current user to docker group..."
sudo usermod -aG docker $USER
newgrp docker

echo "ğŸš€ Installing dependencies..."
sudo dnf install -y iptables conntrack curl tar

echo "ğŸš€ Adding /usr/local/bin to PATH..."
echo 'export PATH=$PATH:/usr/local/bin' >> ~/.bashrc
source ~/.bashrc

# --------------------------
# Install kubectl
# --------------------------
echo "ğŸš€ Installing kubectl..."
curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl"
sudo mv kubectl /usr/local/bin/kubectl
sudo chmod +x /usr/local/bin/kubectl
kubectl version --client

# --------------------------
# Install Minikube
# --------------------------
echo "ğŸš€ Installing Minikube..."
curl -LO https://storage.googleapis.com/minikube/releases/latest/minikube-linux-amd64
sudo install minikube-linux-amd64 /usr/local/bin/minikube
minikube version

# --------------------------
# Start Minikube
# --------------------------
echo "ğŸš€ Starting Minikube cluster (single-node)..."
minikube start --driver=docker --force

echo "ğŸš€ Checking Minikube status..."
minikube status

echo "âœ… Minikube setup completed!"
echo "Use 'kubectl get nodes' to check the node status."
